<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fragment container -->
    <FrameLayout
        android:id="@+id/alexander402_fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/alexander402_buttonFragmentTwo" />

    <!-- Button to switch to Fragment One -->
    <Button
        android:id="@+id/alexander402_buttonFragmentOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spring"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <!-- Button to switch to Fragment Two -->
    <Button
        android:id="@+id/alexander402_buttonFragmentTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
